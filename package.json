{
  "name": "luma",
  "version": "0.0.0",
  "main": "app/java/main.js",
  "description": "Luma Electron App",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder --win --publish never",
    "package": "electron-builder --dir"
  },
  "keywords": [],
  "author": "Effortles Quest",
  "license": "Non-Commercial Redistribution License",
  "devDependencies": {
    "electron": "^24.8.8",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.luma.app",
    "productName": "Luma",
    "files": [
      "app/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "app/ai_server.py",
      {
        "from": "app/dist/ai_server.exe",
        "to": "app/dist/ai_server.exe"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Effortless-Quest",
        "repo": "Luma"
      }
    ]
  }
}
